<?xml version="1.0" encoding="UTF-8"?>
<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="ehcache.xsd"
         updateCheck="false" 
         monitoring="autodetect"
         dynamicConfig="true">
         
         <!-- 
    <diskStore path="java.io.tmpdir"/>
     	-->

    <cache name="jpress"
           maxEntriesLocalHeap="500"
           eternal="false"
           overflowToDisk="true"
           timeToIdleSeconds="300"
           timeToLiveSeconds="600"
           diskPersistent="true"
           diskExpiryThreadIntervalSeconds="1"
           memoryStoreEvictionPolicy="LFU"
            />
    
    <cache name="session"
		  maxElementsInMemory="10000"
		  maxElementsOnDisk="100000000"
		  eternal="false"
		  timeToIdleSeconds="3600"
		  timeToLiveSeconds="0"
		  overflowToDisk="true"
		  diskPersistent="true"
  		 />
  		 
    <cache name="action"
		  maxElementsInMemory="10000"
		  maxElementsOnDisk="100000000"
		  eternal="false"
		  timeToIdleSeconds="3600"
		  timeToLiveSeconds="0"
		  overflowToDisk="true"
		  diskPersistent="true"
  		 />
    <cache name="action_wechat"
		  maxElementsInMemory="10000"
		  maxElementsOnDisk="100000000"
		  eternal="false"
		  timeToIdleSeconds="3600"
		  timeToLiveSeconds="0"
		  overflowToDisk="true"
		  diskPersistent="true"
  		 />
    <cache name="action_mobile"
		  maxElementsInMemory="10000"
		  maxElementsOnDisk="100000000"
		  eternal="false"
		  timeToIdleSeconds="3600"
		  timeToLiveSeconds="0"
		  overflowToDisk="true"
		  diskPersistent="true"
  		 />
    
    <cache name="token"
		  maxElementsInMemory="10000"
		  maxElementsOnDisk="1000000000"
		  eternal="false"
		  timeToIdleSeconds="3600"
		  timeToLiveSeconds="0"
		  overflowToDisk="true"
		  diskPersistent="true"
  		 />
    
    <cache name="option"
           maxEntriesLocalHeap="5000"
           eternal="true"
           overflowToDisk="true"
           diskPersistent="true"
           memoryStoreEvictionPolicy="FIFO"
            />
    
     <cache name="content"
         maxEntriesLocalHeap="10000"
         maxEntriesLocalDisk="100000"
         eternal="false"
         overflowToDisk="true"
         diskSpoolBufferSizeMB="20"
         timeToIdleSeconds="300"
         timeToLiveSeconds="600"
         memoryStoreEvictionPolicy="LFU"
         transactionalMode="off"
          />
          
