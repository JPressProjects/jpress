       timeToLiveSeconds="0"
       overflowToDisk="true"
       diskPersistent="true"
    />

    <cache name="user"
       eternal="false"
       overflowToDisk="true"
       diskSpoolBufferSizeMB="20"
       timeToIdleSeconds="300"
       timeToLiveSeconds="600"
       memoryStoreEvictionPolicy="LFU"
    />

